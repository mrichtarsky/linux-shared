[user]
name = Martin Richtarsky
email = s@martinien.de

[core]
preloadindex = true

[pager]
log = /r/scripts/diff-highlight | less -R
show = /r/scripts/diff-highlight | less -R
diff = /r/scripts/diff-highlight | less -R

#[interactive]
#  diffFilter=/home/d048964/.cargo/bin/diffr

[alias]
fixup = !sh -c 'REV=$(git rev-parse $1) && git commit --fixup $@ && git rebase -i --autosquash $REV^' -
squash = !sh -c 'REV=$(git rev-parse $1) && git commit --squash $@ && git rebase -i --autosquash $REV^' -
appall = "!sh -c 'git add -u; git commit --amend'"
lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(blue)<%an>%Creset' --abbrev-commit
last = for-each-ref --sort=-committerdate refs/heads --format='%(color:yellow)%(objectname:short) %(color:red)%(refname:short) %(color:reset)%(subject)'
picklast = "!git cherry-pick $(git for-each-ref --count=1 --sort=-committerdate refs/heads --format='%(objectname)')"

[rebase]
autostash = true
autosquash = true

[merge]
log = 100
renamelimit=15000

[diff]
algorithm = histogram

[rerere]
enabled = 1

[color]
ui = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow
frag = magenta
old = red
new = green

[color "status"]
added = green
changed = yellow
untracked = cyan

#[http]
#sslVerify = false

[credential]
	helper = store

